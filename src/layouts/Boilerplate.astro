---
import Navbar from "../components/Navbar";
import Footer from "../components/Footer.astro";
interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html data-theme="printingTalks" lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="canonical" href={Astro.request.url} />
		<title>{title}</title>
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/images/printing-talks.png" />
		<meta property="og:url" content="https://www.printingtalks.ae" />
		<meta property="og:type" content="website" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content="/images/printing-talks.png" />
		<meta
			name="keywords"
			content="Printing and packaging abu dhabi, Printing, Packaging, Abu Dhabi, Custom Solutions, Eco-Friendly, Digital Printing, Offset Printing, Business Cards, Brochures, Banners, Promotional Items, Cups, Boxes, Cardboard, Cardboard Boxes, Gifts, Packaging Accessories"
		/>
	</head>
	<body class="hide-scroll-bar">
		<Navbar
			logo="/images/printing-talks.svg"
			links={[
				{ title: "Home", href: "/" },
				{ title: "Products", href: "/product-gallery" },
				{ title: "Articles", href: "/article-gallery" },
			]}
			ctaHref="/#request-quote-form-section"
		/>
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	h1 {
		@apply text-5xl;
	}
	h2 {
		@apply text-4xl;
	}
	h3 {
		@apply text-3xl;
	}
	h4 {
		@apply text-2xl;
	}
	h5 {
		@apply text-xl;
	}
	h6 {
		@apply text-lg;
	}

	@font-face {
		font-family: Avenir;
		src: url(/fonts/AvenirLTStd-Heavy.otf);
		font-weight: 700;
		font-style: normal;
	}

	@font-face {
		font-family: Avenir;
		src: url(/fonts/AvenirLTStd-Medium.otf);
		font-weight: 500;
		font-style: normal;
	}

	@font-face {
		font-family: Avenir;
		src: url(/fonts/AvenirLTStd-Roman.otf);
		font-weight: 400;
		font-style: normal;
	}
	html {
		font-family: "Avenir", system-ui, sans-serif;
		background: var(--base-100);
		color: var(--base-content);
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	.hide-scroll-bar {
		/* For Internet Explorer, Edge */
		-ms-overflow-style: none;

		/* For Firefox */
		scrollbar-width: none;
	}
	/* For Chrome, Safari, Opera */
	.hide-scroll-bar::-webkit-scrollbar {
		display: none;
	}
	#request-quote-form-section {
		object-fit: fill;
		background-image: url("/images/boxes-texture.png");
	}
	.image-scale {
		transform: scale(1.05);
	}

	article h1,
	article h2,
	article h3,
	article h4,
	article h5,
	article h6 {
		font-family: "Arial", sans-serif; /* Sans-serif font for headings */
		color: #000; /* Black for headings */
		margin-top: 1.2em; /* Spacing above headings */
		margin-bottom: 0.6em; /* Spacing below headings */
	}

	article p {
		margin-bottom: 1em; /* Spacing below paragraphs */
	}

	article ul,
	article ol {
		margin-left: 20px; /* Indent lists */
		margin-bottom: 1em; /* Spacing below lists */
	}

	article li {
		margin-bottom: 0.5em; /* Spacing between list items */
	}

	article a {
		color: #0066cc; /* Color for links */
		text-decoration: none; /* No underline */
	}

	article a:hover {
		text-decoration: underline; /* Underline on hover for links */
	}

	article img {
		max-width: 100%; /* Ensure images are not wider than the article */
		height: auto; /* Maintain aspect ratio */
		margin-top: 1em; /* Spacing above images */
		margin-bottom: 1em; /* Spacing below images */
	}

	/* Small text such as captions or references */
	article .small-text {
		font-size: 0.8em; /* Smaller font size */
		color: #666; /* Lighter color for less emphasis */
	}

	/* Styling for block quotes */
	article blockquote {
		font-style: italic; /* Italicize quotes */
		margin-left: 20px; /* Indent block quotes */
		margin-right: 20px; /* Indent block quotes */
		padding-left: 15px; /* Padding for aesthetic */
		border-left: 3px solid #ccc; /* Left border for quotes */
	}
	@media only screen and (max-width: 600px) {
		html {
			font-size: 80%;
		}
	}
</style>
