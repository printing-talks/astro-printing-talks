---
import Boilerplate from "../layouts/Boilerplate.astro";
import Navbar from "../components/Navbar";
import Footer from "../components/Footer.astro";
import ProductsGrid from "../components/ProductsGrid";
---

<Boilerplate title="Printing Talks">
  <Navbar
    logo="/images/printing-talks.svg"
    links={[
      { title: "Home", href: "/" },
      { title: "Products", href: "/product-gallery" },
    ]}
    ctaHref="/#request-quote-form"
  />
  <div class="flex flex-col">
    <div
      class="top-banner flex flex-col h-[12rem] md:h-[14rem] justify-center gap-1 self-stretch border-b border-solid p-4 md:px-12"
    >
      <h4 class="font-medium text-3xl">Products</h4>
      <p class="text-neutral text-xl">
        Design and order a wide range of fully customisable packaging products
        for your brand.
      </p>
    </div>
    <div class="sm:hidden flex overflow-auto p-4 gap-4 bg-base-200">
      <div class="flex gap-2 min-w-fit">
        <input type="radio" id="all-categories" />
        <label for="all-categories">
          <p class="text-normal">All Categories</p>
        </label>
      </div>
    </div>
    <div class="search-results-container flex p-2 md:px-12 md:py-8">
      <aside
        class="hidden sm:flex flex-col sticky top-0 flex-shrink-0 refinement overflow-x-hidden overflow-y-auto max-w-lg h-fit py-6 pr-6"
      >
        <p class="font-bold">Categories</p>
        <div class="flex gap-4">
          <input type="radio" id="all-categories" />
          <label for="all-categories">
            <p class="text-normal">All Categories</p>
          </label>
        </div>
      </aside>
      <ProductsGrid client:load />
    </div>
  </div>
  <Footer />
</Boilerplate>
